<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1 class="card-panel red darken-2 center-align z-depth-5">EAT DAT BURGERRR!</h1>
        </div>
        <div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" placeholder="Veggie Burger" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn waves-effect red black-text" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to consume!</p>
        </div>
    </div>
</div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-xs-9 text-center">
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                    </div>
                <div class="col-xs-3 text center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">DEVOUR IT</button>
                    
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <h1 class="card-panel lime darken-4 center-align z-depth-5">STOMACH CONTENTS</h1>
        <div class="col-xs-6 text-center z-depth-4" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="card-panel lime darken-4 center-align" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                    {{/each}}
        </div>
    </div>

</div>

